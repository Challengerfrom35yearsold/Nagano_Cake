<h1>ジャンル一覧・追加</h1>

ジャンル名
<%= form_with model: @genre,url: admin_genres_path,method: :post do |f| %>
  <%= f.text_field :name %>
  <%= f.submit '新規登録' %>
<% end %>

<table class="table">
  <tbody>
    <% @genres.each do |genre| %>
    <td>
      ジャンル
    </td>
  </tbody>
  <tbody>
    <td>
      <%= genre.name %>
    </td>
    <td>
      <%= link_to '編集する',  edit_admin_genre_path(genre.id) %>
    </td>
    <% end %>
  </tbody>

</table>