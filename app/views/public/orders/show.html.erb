<div class="container">
  <div class="row">
    <div class="col-md-4 mb-2 d-flex align-items-center justify-content-center">
      <h3 class="px-2" style="background-color: #c1c7cd !important;">注文履歴詳</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-7 mb-2 mb-4">
      注文情報
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td class="align-middle" style="background-color: #c1c7cd !important;">
              注文日
            </td>
            <td class="align-middle">
              <%= @order.created_at.strftime('%Y/%m/%d') %> <br />
            </td>
          </tr>
          <tr>
            <td class="align-middle" style="background-color: #c1c7cd !important;">
              配送先
            </td>
            <td class="align-middle">
              <%= @order.postal_code %> <br />
              <%= @order.address %> <br />
              <%= @order.name %> <br />
            </td>
          </tr>
          <tr>
            <td class="align-middle" style="background-color: #c1c7cd !important;">
              支払方法
            </td>
            <td class="align-middle">
              <%= @order.payment_method_i18n %>
            </td>
          </tr>
          <tr>
            <td class="align-middle" style="background-color: #c1c7cd !important;">
              ステータス
            </td>
            <td class="align-middle">
              <%= @order.status_i18n %>  <br />
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-5 mb-2 mb-4">
      請求情報
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td class="align-middle" style="background-color: #c1c7cd !important;">
              商品合計
            </td>
            <td class="align-middle">
              <% total = 0 %>
              <% @order_details.each do |order_detail| %>
                <% total = total + order_detail.price %>
              <% end %>
              <%= total.to_s(:delimited) %>
            </td>
          </tr>
          <tr>
            <td class="align-middle" style="background-color: #c1c7cd !important;">
              配送料
            </td>
            <td class="align-middle">
              800
            </td>
          </tr>
          <tr>
            <td class="align-middle" style="background-color: #c1c7cd !important;">
              ご請求金額
            </td>
            <td class="align-middle">
              <%= @order.total_payment.to_s(:delimited) %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="col-md-10 mb-2">
    注文内容
    <table class="table table-bordered">
      <thead>
        <tr>
          <th style="background-color: #c1c7cd !important;">商品</th>
          <th style="background-color: #c1c7cd !important;">単価(税込)</th>
          <th style="background-color: #c1c7cd !important;">個数</th>
          <th style="background-color: #c1c7cd !important;">小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order_details.each do |order_detail| %>
        <tr>
          <td>
            <%= order_detail.item.name %>
          </td>
          <td>
            <%= order_detail.price %>
          </td>
            <td>
            <%= order_detail.amount %>
          </td>
          <td>
            <%= order_detail.price * order_detail.amount %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>