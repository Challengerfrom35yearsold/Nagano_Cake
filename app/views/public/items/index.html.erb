<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'layouts/genre_search', genres:@genres %>
    </div>
    <div class="col-md-9">
      <div class="row">
        <h3 class="col-md-12">商品一覧</h3>
        <% @items.each do |item| %>
        <div class="d-flex col-md-3 mb-3 align-items-center justify-content-center">
          <%= link_to item_path(item.id) do %>
          <%= image_tag item.get_item_image(100,100) %>
          <div class="text-center">
            <%= item.name %> <br />
            ￥<%= item.price.to_s(:delimited) %>
          </div>
          <% end %>
        </div>
        <% end %>
        <div class="d-flex col-12 justify-content-center">
          <%= paginate @items %>
        </div>
      </div>
    </div>
  </div>
</div>