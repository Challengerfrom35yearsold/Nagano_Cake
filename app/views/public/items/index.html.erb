<h1>ジャンル検索</h1>

<table class="table">
  <thead>
    <tr>
      <th>ジャンル検索</th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
    　  <td>
      　 <%= genre.name %>
    　  </td>
    　</tr>
    <% end %>
  </tbody>
</table>

<h1>商品一覧</h1>
<% @items.each do |item| %>

  <%= link_to item_path(item.id) do %>
    <%= image_tag item.get_item_image(100,100) %>
  <% end %>


  <%= item.name %>

  ￥<%= item.price.to_s(:delimited) %>

<% end %>

<%= paginate @items %>