<h1>注文情報入力</h1>

<%= form_with model: @order,url: orders_comfirm_path, method: :post  do |f| %>

  支払方法
　<%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
  <%= f.label :payment_method_credit_card, Order.payment_methods_i18n[:credit_card] %>

  <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
  <%= f.label :payment_method_transfer, Order.payment_methods_i18n[:transfer]%> <br />

  お届け先
  <%= f.radio_button :address_btn, "myself_address" %>
  <%= f.label :address_btn, 'ご自身の住所', value: "myself_address" %> <br />
  <%= f.label :address_btn, @customer.postal_code, value: "myself_address" %>
  <%= f.label :address_btn, @customer.address, value: "myself_address" %> <br />
  <%= f.label :address_btn, (@customer.last_name+@customer.first_name), value: "myself_address" %> <br />


  <%= f.radio_button :address_btn, "registered_address" %>
  <%= f.label :address_btn, '登録済住所から選択', value: "registered_address" %> <br />
  <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %> <br />

  <%= f.radio_button :address_btn, "new_address" %>
  <%= f.label :address_btn, '新しいお届け先', value: "new_address" %> <br />

  <%= f.label :postal_code, '郵便番号(ハイフンなし)' %>
  <%= f.text_field :postal_code %> <br />
  住所
  <%= f.text_field :address %> <br />
  宛先
  <%= f.text_field :name %> <br />

  <%= f.submit '確認画面へ進む' %>

<% end %>