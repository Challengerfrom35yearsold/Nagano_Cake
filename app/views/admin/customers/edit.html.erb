<h1>
  <%= @customer.last_name + @customer.first_name %>さんの
  会員情報編集
</h1>

<%= form_with model: @customer,url: admin_customer_path, method: :patch  do |f| %>

  会員ID
  <%= @customer.id %> <br />

  氏名
  <%= f.text_field :last_name %>
  &nbsp;
  <%= f.text_field :first_name %> <br />

  フリガナ
  <%= f.text_field :last_name_kana %>
  &nbsp;
  <%= f.text_field :first_name_kana %> <br />

  郵便番号
  <%= f.text_field :postal_code %> <br />

  住所
  <%= f.text_field :address %> <br />

  電話番号
  <%= f.text_field :telephone_number %> <br />

  メールアドレス
  <%= f.text_field :email %> <br />

　会員ステータス
　<%= f.radio_button :is_deleted, false %>
  <%= f.label :is_deleted, "有効" %>
　<%= f.radio_button :is_deleted, true %>
  <%= f.label :is_deleted, "退会" %> <br />

　<%= f.submit '変更を保存' %>

<% end %>