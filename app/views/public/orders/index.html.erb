<div class="container px-1">
  <div class="row">
    <div class="col-md-4 mb-2 d-flex align-items-center justify-content-center">
      <h3 class="px-2" style="background-color: #c1c7cd !important;">注文履歴一覧</h3>
    </div>
  </div>

  <table class="table table-bordered mb-4">
    <thead>
      <tr>
        <th style="background-color: #c1c7cd !important;">注文日</th>
        <th style="background-color: #c1c7cd !important;">配送先</th>
        <th style="background-color: #c1c7cd !important;">注文商品</th>
        <th style="background-color: #c1c7cd !important;">支払金額</th>
        <th style="background-color: #c1c7cd !important;">ステータス</th>
        <th style="background-color: #c1c7cd !important;">注文詳細</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td class="align-middle">
            <%= order.created_at.strftime('%Y/%m/%d') %>
          </td>
          <td class="align-middle">
            〒<%= order.postal_code %> <br />
            <%= order.address %> <br />
            <%= order.name %> <br />
          </td>
          <td class="align-middle">
            <% order.items.each do |item| %>
              <%= item.name %>
            <% end %>
          </td>
          <td class="align-middle">
            <%= order.total_payment %>
          </td>
          <td class="align-middle">
            <%= order.status_i18n %>
          </td>
          <td class="align-middle">
            <%= link_to "表示する", order_path(order.id), class:"btn btn-primary btn-block" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>